/*---------------------------------------------
	CUSTOM CSS
---------------------------------------------*/
.tdHover:hover {background:#d0cfe8 !important; cursor : pointer;}

/* drag */
.dragged {position: absolute; opacity: 0.5; z-index: 2000; border-bottom : 0px !important;}
ul.drag li.placeholder {position: relative !important;}
ul.drag li.placeholder:before {position: absolute; content: ""; width: 0; height: 0; margin-top: -5px; left: -5px; top: -4px; border: 5px solid transparent; border-left-color: red; border-right: none;}
.liCode {padding:8px 5px; font-size:13px; border-bottom:1px dotted #555555;}
.liCode:hover{background-color: #f5f5f5;}
.liCode.selected{background-color: #b0bed9;}

.filebox input[type="file"] {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip:rect(0,0,0,0);
  border: 0;
}

.filebox label {
  display: inline-block;
  padding: .5em .75em;
  color: #fff;
  font-size: inherit;
  line-height: normal;
  vertical-align: middle;
  background-color: #b2b2b2;
  cursor: pointer;
  border: 1px solid #ebebeb;
  border-bottom-color: #e2e2e2;
  border-radius: .25em;
  font-weight: 600;
}

/* named upload */
.filebox .upload-name {
  width: 200px;
  word-break: break-all;
  display: inline-block;
  padding: .5em .75em;  /* label의 패딩값과 일치 */
  font-size: inherit;
  font-family: inherit;
  line-height: normal;
  vertical-align: middle;
  background-color: #f5f5f5;
  border: 1px solid #ebebeb;
  border-bottom-color: #e2e2e2;
  border-radius: .25em;
  -webkit-appearance: none; /* 네이티브 외형 감추기 */
  -moz-appearance: none;
  appearance: none;
}

label.error {
        width: auto;
        display: block;
        color: red;
        margin-top: 4px;
}

.d_btn a{
    display: inline-block;
  padding: .5em .75em;
  color: #fff;
  font-size: inherit;
  line-height: normal;
  vertical-align: middle;
