ul.menu .ton {font-size:14px; font-weight:600; background-color: #333; width:150px; text-align:center;}
.ton > a{color:#fff !important;}
ul.menu .sub {display:none}
ul.menu li ul.sub{background-color: #37394e; position: absolute; width: 150px; z-index: 999;}
ul.menu li ul.sub li{float:left; margin : 0; font-weight:600; color:#787b8f; font-size:14px; width: 100%; height: 100%;}
ul.menu:after{height: 0; visibility: hidden; content: "."; display: block; clear: both;}

